<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#CD9E07" />
            <gradient android:angle="-90" android:startColor="#CD9E07" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#CD9E07" />
            <solid android:color="#CD9E07"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#CD9E07" />
            <gradient android:angle="-90" android:startColor="#CD9E07" android:endColor="#CD9E07" />
        </shape>
    </item>
</selector>